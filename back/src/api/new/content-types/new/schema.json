{
  "kind": "collectionType",
  "collectionName": "news",
  "info": {
    "singularName": "new",
    "pluralName": "news",
    "displayName": "Новости"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid",
      "required": true,
      "maxLength": 150
    },
    "date": {
      "type": "date",
      "required": true
    },
    "name": {
      "type": "string",
      "minLength": 5,
      "maxLength": 150,
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "text",
      "required": false
    }
  }
}
